<h1>Create new </h1>
<% if @article.errors.any? %>
<h2>Some Errors prevented your form to submit</h2>
<ul>
<% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
</ul>
<% end %>
<% end %>
<%= form_with scope: :article, url: articles_path, local:true do |f| %>
<p>
<%= f.label :title%></br>
<%= f.text_field :title %>
</p>
<p>
<%= f.label :description%></br>
<%= f.text_area :description %>
</p>
<p><%= f.submit %></p>
<% end %>
<p>
<%= link_to 'cancel and return to article listing' , articles_path %>
</P>