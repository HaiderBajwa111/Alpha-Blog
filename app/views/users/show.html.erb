<h1 class="text-center mt-2"><%= @user.username %>'s profile</h1>
<%= gravatar_for @user, size:200%>
<% if logged_in? && @user == current_user %>
<div class="text-center mt-2">
<%= link_to 'Edit profile' , edit_user_path(@user),  class: "mx-auto  btn btn-outline-primary" %>
</div>
<%end %>
<% if logged_in? && @user != current_user %>
  <% if current_user.followees.include?(@user) %>
  <div class="text-center mt-2">
  <%= link_to 'Unfollow' , unfollow_user_path(@user), method: :post, class: "mx-auto  btn btn-outline-primary" %>
  </div>
  <% else %>
  <div class="text-center mt-2">
  <%= link_to current_user.followers.include?(@user) ? 'Follow back' : 'Follow' , follow_user_path(@user), method: :post, class: "mx-auto  btn btn-outline-primary" %>
  </div>
  <%end%>
<%end %>
<h1 class="text-center mt-2">Articles</h1>
<%= render 'articles/articles'%>


