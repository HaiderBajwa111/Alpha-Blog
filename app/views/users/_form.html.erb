<div class="container">
<% if @user.errors.any? %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <h4 class="alert-heading">OOPs!</h4>
      <p>Some Errors prevented your form to submit</p>
    <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <%end%>
    </ul>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
 
  <%= form_with(model: @user, class: "shadow p-2 mb-2 bg-info rounded", local:true ) do |f| %>
    <div class="row justify-content-md-center">
        <div class="col-9">
          <div class="mb-3 ">
            <%= f.label :username, class:"form-label"%></br>
            <%= f.text_field :username, class:"form-control shadow rounded" %>
          </div>
          <div class="mb-3 ">
            <%= f.label :email, class:"form-label"%></br>
            <%= f.email_field :email, class:"form-control shadow rounded"  %>
          </div>
          <div class="mb-3 ">
          <%= f.label :password, class:"form-label"%></br>
          <%= f.password_field :password, class:"form-control shadow rounded"  %>
        </div>
          <div class="mb-3 row justify-content-md-center">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update Account", class: "col-2 btn btn-outline-light")%>
          </div>
        </div>
    </div>
  <% end %>
 <!--<div class=" row justify-content-md-center">
    <%= link_to '[cancel and return to article listing]' , articles_path, class: " col-3 text-info" %>
  </div>-->
</div>

